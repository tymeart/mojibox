extends ../base.pug

block content
  .ui.container
    #emoticons.ui.grid.container
      each emoticon in emoticons
        .emoticon(id=`${emoticon._id}`).ui.center.aligned.eight.wide.column #{emoticon.content}
    form.ui.form
      button#delete.ui.basic.negative.button.hide(onClick='deleteReq()') Delete
  script(src="https://unpkg.com/axios/dist/axios.min.js")
  script(src="/js/select.js")
  script.
    var user = !{JSON.stringify(user)};
    function deleteReq() {
      axios.post(`/user/${user.username}/collection/delete`, {
        selectedArr: selected
      });
    }
