extends ../base.pug

block content
  .ui.container
    h1.ui.header Edit profile
    div
      form(action=`/user/${user.username}?_method=PATCH` method="POST")
        p Current username: #{user.username}
        input(type="text" name="newUsername")
        button.ui.primary.button Update Username
      form(action=`/user/${user.username}?_method=DELETE` method="POST")
        button.ui.negative.basic.button Delete Account
