extends ../base.pug

block content
  .ui.container
    h1.ui.header Create an account
    form.ui.form(action="/user" method="POST")
      .field
        label(for="username") Username
        input(type="text" name="username")
      .field
        label(for="password") Password
        input(type="password" name="password")
      button.ui.primary.button Create
